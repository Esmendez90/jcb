  <p class={{pClass}}>{{text}}</p>
  <div class="input-group">
    <input
      id="cityName"
      type="text"
      class="form-control"
      placeholder="City"
      aria-label="City"
    />
    <input
      id="zipCode"
      type="text"
      class="form-control"
      placeholder="Zip Code"
      aria-label="Zip Code"
    />
  </div>
{{>radioBtns}}
  {{>button type="Search"}}
  </div>
  <p class={{resultsClass}}>{{resultsText}}</p>
